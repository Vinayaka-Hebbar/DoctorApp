<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dfdddd"
    tools:context="com.example.vinayakahebbar.doctorapp.fragments.ProfileFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Who is the Patient ?"
                android:textStyle="bold"
                android:layout_margin="15dp"
                android:textSize="20sp" />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/rg_profile_patient"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MySelf"
                        android:id="@+id/rb_profile_pnt_1"
                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="husband"
                        android:id="@+id/rb_profile_pnt_2"
                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="wife"
                        android:id="@+id/rb_profile_pnt_3"
                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Father"
                        android:id="@+id/rb_profile_pnt_4"
                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mother"
                        android:id="@+id/rb_profile_pnt_5"
                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daughter"
                        android:id="@+id/rb_profile_pnt_6"
                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Son"
                        android:id="@+id/rb_profile_pnt_7"
                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other"
                        android:id="@+id/rb_profile_pnt_8"
                        />
                </RadioGroup>
            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Patient Age"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Patient Gender"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="140dp"
                    android:layout_height="50sp"
                    android:layout_marginTop="10sp"
                    android:id="@+id/et_profile_age"
                    android:background="@drawable/border_accent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="20dp"
                    android:hint="e.g.22"
                    android:padding="5sp"
                    android:inputType="numberDecimal"
                    android:textSize="20sp"
                    android:layout_weight="0.25" />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10sp"
                    android:id="@+id/rg_profile_gender"
                    android:layout_marginStart="30dp"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/rb_profile_male"
                        android:drawableStart="@mipmap/ic_male"/>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/rb_profile_female"
                        android:drawableStart="@mipmap/ic_female"/>

                </RadioGroup>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_text_multi"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15sp"
                android:id="@+id/et_patient_info"
                android:layout_marginEnd="15sp"
                android:padding="5sp"
                android:inputType="textMultiLine"
                android:background="@drawable/border_accent"
                android:hint=" Please type your health issue in detail."
                android:textSize="18sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Specialization"
                android:textSize="20sp"
                android:padding="5sp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/border_accent"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:id="@+id/spinner_profile"
                android:entries="@array/specialities"
                android:layout_marginStart="15dp">

            </Spinner>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10sp"
                android:id="@+id/btn_profile_submit"
                android:layout_marginEnd="10sp"
                android:background="@color/colorPrimary"
                android:text="SUBMIT"
                android:textSize="20sp"
                />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
