<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vinayakahebbar.doctorapp.fragments.ListHospitalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_list_name"
                android:layout_alignParentStart="true"
                android:layout_margin="5sp"
                android:layout_toStartOf="@+id/ib_list_hospital_sort"
                android:textSize="24sp"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ib_list_hospital_sort"
                android:padding="5sp"
                android:src="@drawable/ic_action_sort"
                android:layout_alignParentEnd="true"
                android:background="@null"
                android:contentDescription="Sort" />
        </RelativeLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:id="@+id/lv_hospital"/>
    </LinearLayout>

</FrameLayout>
