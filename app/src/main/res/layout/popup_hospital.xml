<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_black_light">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/bg_border_black"
        android:layout_centerInParent="true"
        android:layout_marginTop="150sp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:layout_marginBottom="50sp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:gravity="end"
            android:padding="5sp"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:id="@+id/btn_popup_close"
                android:src="@drawable/ic_action_close"
                android:background="@color/red_light"
                android:contentDescription="Close" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="10sp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_popup_name"
                android:layout_margin="5sp"
                android:textSize="24sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_margin="5sp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_popup_address"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_margin="10sp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_popup_distance"
                android:text="Direction"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>