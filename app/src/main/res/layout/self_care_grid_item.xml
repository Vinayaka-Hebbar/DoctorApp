<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="5sp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="5sp"
            android:id="@+id/layout_grid_self_care"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:id="@+id/tv_grid_self_care_topic"/>
            <com.example.vinayakahebbar.doctorapp.views.ImageLoaderView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/img_grid_self_care"
                app:img_height="250"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:ellipsize="end"
                android:id="@+id/tv_grid_self_care_short_desc"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>