<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.vinayakahebbar.doctorapp.fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/viewpager_height">
            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/viewpager_main"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:background="@color/light_black"
                android:layout_height="wrap_content"
                android:id="@+id/layout_dots"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dim_white"
            android:layout_margin="10sp"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="2sp"
                app:cardElevation="2sp"
                android:id="@+id/cv_hospital"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:padding="40sp"
                    android:background="@drawable/bg_accent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="64sp"
                        android:layout_height="64sp"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_hospital"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Find Hospital"
                        android:gravity="center"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="2sp"
                android:id="@+id/cv_doctor"
                app:cardElevation="2sp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_accent"
                    android:orientation="vertical"
                    android:padding="40sp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="64sp"
                        android:layout_height="64sp"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_doctor"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Find Doctor"
                        android:gravity="center"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
