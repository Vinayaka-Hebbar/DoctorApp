<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    android:background="@drawable/health"
    tools:context="com.example.vinayakahebbar.doctorapp.activities.LoginActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#69d6c2"
        android:textSize="40dp"

        android:layout_marginLeft="20dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"


        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Password"
        android:textSize="40dp"
        android:textColor="#71e7d1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="45dp"
        android:layout_gravity="center"
        android:text="Login"
        android:textAllCaps="false"
        android:textSize="30dp"
        android:background="#74e6c5"
        android:textColor="#fff"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="New User (Sign up)"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:background="invisible"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Forget Password"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="-40dp"
        android:background="invisible"

        />

   </LinearLayout>
    </ScrollView>


</LinearLayout>
